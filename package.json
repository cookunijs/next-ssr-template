{
  "name": "atlie-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "clean": "rm -rf .next && rm -rf dist",
    "dev": "cross-env APP_ENV=local nodemon && yarn copy-static",
    "deploy": "yarn build && firebase deploy",
    "deploy:dev": "firebase use default && cross-env APP_ENV=dev yarn deploy",
    "build": "yarn clean && run-p build:*",
    "build:next": "next build && yarn copy-static",
    "build:server": "tsc --project tsconfig.server.json",
    "start": "cross-env NODE_ENV=production node dist/server/index.js",
    "start:localDocker": "cross-env APP_ENV=local yarn build && docker build -t nextjssample . && docker run -e PORT=3000 -e APP_ENV=local -p 3000:3000 nextjssample",
    "copy-static": "cpx \"public/{**,.**}/{*,.*}\" \".next/static\"",
    "gcloud:build": "gcloud --project $GCLOUD_PROJECT builds submit --tag gcr.io/$GCLOUD_PROJECT/renderer",
    "gcloud:run": "gcloud --project $GCLOUD_PROJECT beta run deploy renderer --platform managed --region asia-northeast1 --set-env-vars TZ=Asia/Tokyo,APP_ENV=$APP_ENV --image gcr.io/$GCLOUD_PROJECT/renderer",
    "lint": "eslint --ext .ts,.tsx .",
    "lint:fix": "eslint --ext .ts,.tsx . --fix"
  },
  "dependencies": {
    "basic-auth": "^2.0.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "firebase": "^7.14.6",
    "firebase-admin": "^8.12.1",
    "next": "9.3.5",
    "react": "16.13.1",
    "react-dom": "16.13.1"
  },
  "devDependencies": {
    "@types/basic-auth": "^1.1.3",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.6",
    "@types/node": "^14.0.6",
    "@types/react": "^16.9.35",
    "@typescript-eslint/eslint-plugin": "^3.0.2",
    "@typescript-eslint/parser": "^3.0.2",
    "cpx": "^1.5.0",
    "cross-env": "^7.0.2",
    "dotenv-webpack": "^1.8.0",
    "eslint": "^7.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.20.0",
    "firebase-tools": "^8.4.1",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.3",
    "webpack": "^4.43.0"
  }
}
